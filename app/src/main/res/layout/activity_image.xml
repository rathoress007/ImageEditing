<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#FF6347"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <AbsoluteLayout
         android:layout_width="match_parent"
         android:layout_weight="1.2"
         android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
         android:gravity="center"
         android:id="@+id/relative_layout"
         android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ec0d8f"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_view"
            android:layout_x=".5dp"
            android:layout_y="0dp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_view1"
            android:layout_x=".5dp"
            android:layout_y="0dp" />



        <ImageView
            android:id="@+id/stickerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="4dp"
            android:layout_y="3dp"
            android:scaleType="matrix" />


        <ImageView
            android:id="@+id/EyeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="4dp"
            android:layout_y="3dp"
            android:scaleType="matrix" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample"
            android:id="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            android:layout_x="55dp"
            android:layout_y="55dp">
        </TextView>



    </AbsoluteLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4.3 "
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/camera_button"
                    android:src="@drawable/camera"
                    style="?android:attr/borderlessButtonStyle"

                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:scrollbars="horizontal" />
            </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:background="@drawable/image_icon_view"
        android:layout_height="match_parent">

        <Button
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gallary"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:id="@+id/gallary_button"
            style="?android:attr/borderlessButtonStyle"
            android:drawableTop="@drawable/image"/>

        <Button
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Frame"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:id="@+id/frame_button"
            style="?android:attr/borderlessButtonStyle"
            android:drawableTop="@drawable/frame"/>

        <Button
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sticker"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:id="@+id/sticker_button"
            style="?android:attr/borderlessButtonStyle"
            android:drawableTop="@drawable/sticker"/>

        <Button
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/attractive"
            android:textAllCaps="false"
            android:id="@+id/eye"
            style="?android:attr/borderlessButtonStyle"
            android:text="Effects"/>

        <Button
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:id="@+id/done_button"
            style="?android:attr/borderlessButtonStyle"
            android:text="Done"/>

        <Button
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:visibility="gone"
            android:id="@+id/new_button"
            style="?android:attr/borderlessButtonStyle"
            android:text="New"/>


    </LinearLayout>


</LinearLayout>